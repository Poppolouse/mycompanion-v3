# VaultTracker v3 - Environment Variables
# Bu dosyayı .env olarak kopyalayın ve API key'lerinizi girin

# =============================================================================
# Application Settings
# =============================================================================
VITE_APP_NAME="Vault Tracker v3"
VITE_APP_VERSION="3.6.0"

# =============================================================================
# RAWG API (Ana oyun veritabanı)
# =============================================================================
# Ücretsiz: https://rawg.io/apidocs
# Limit: 20,000 requests/month
VITE_RAWG_API_KEY=your_rawg_api_key_here

# =============================================================================
# IGDB API (Backup oyun veritabanı)
# =============================================================================
# Twitch Developer hesabı gerekli: https://dev.twitch.tv/console/apps
# Client ID ve Access Token gerekli
VITE_IGDB_CLIENT_ID=your_twitch_client_id_here
VITE_IGDB_ACCESS_TOKEN=your_twitch_access_token_here

# =============================================================================
# Giant Bomb API (İkinci backup)
# =============================================================================
# Ücretsiz (non-commercial): https://www.giantbomb.com/api/
# Rate limit: 200 requests/hour
VITE_GIANT_BOMB_API_KEY=your_giant_bomb_api_key_here

# =============================================================================
# Steam Web API
# =============================================================================
# Ücretsiz: https://steamcommunity.com/dev/apikey
# Rate limit: 100 requests/minute
VITE_STEAM_API_KEY=your_steam_api_key_here

# =============================================================================
# CheapShark API (Fiyat karşılaştırması)
# =============================================================================
# API key gerektirmiyor - ücretsiz
# Rate limit: 2 requests/second (önerilen)

# =============================================================================
# HowLongToBeat & Metacritic
# =============================================================================
# Web scraping - API key gerektirmiyor
# CORS proxy kullanılabilir (opsiyonel)
VITE_CORS_PROXY_URL=https://api.allorigins.win/get?url=

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_API_DEBUG=true

# =============================================================================
# Storage Settings
# =============================================================================
VITE_STORAGE_PREFIX="vault-tracker"

# =============================================================================
# API Settings
# =============================================================================
# API timeout süresi (ms)
VITE_API_TIMEOUT=10000

# Cache süresi (ms)
VITE_CACHE_DURATION=300000

# Build Settings
VITE_BUILD_TARGET="production"